@model IEnumerable<Shopmohinh.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Thông tin khách hàng</h2>


<table class="table">
    <tr>
        <th>
            Tên khách hàng
        </th>
        <th>
           Số điện thoại
        </th>
        <th>
            Email
        </th>
        <th>
           Địa chỉ
        </th>
        <th>
            Mật khẩu
        </th>
        <th>
            Số lượng Đơn hàng
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.Password)
        </td>
        <td>
            @item.GetOrderCount()
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id = item.CustomerID }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Xóa", "Delete", new { id = item.CustomerID }, new { @class = "btn btn-primary" })
        </td>
    </tr>
}

</table>
