

@model Shopmohinh.Models.ViewModel.ProductDetailsVM
@using PagedList.Mvc
<style type="text/css">
    
    .list-container {
        justify-content: flex-start; /* Canh trái các mục sản phẩm */
        display: flex;
        width: auto; /* Để chiều rộng chiếm hết khung chứa */
        margin: 0 auto;
        margin-top: 3rem;
        overflow-x: auto; 
        padding-bottom: 10px;  
    }

    .product-item img {
        width: 100%; /* Để ảnh vừa với chiều rộng của ô */
        height: auto; /* Tự động co dãn theo chiều rộng */
        max-height: 150px; /* Giới hạn chiều cao tối đa của ảnh */
        object-fit: cover; /* Ảnh sẽ cắt bớt nếu vượt quá giới hạn */
    }

    .product-item {
        flex: 0 0 auto; /* Đảm bảo mỗi sản phẩm sẽ không co lại khi cuộn */
        width: 200px; /* Đặt chiều rộng cố định cho mỗi sản phẩm */
       /* height: 350px*/;
        box-shadow: 0 5px 40px rgba(0, 0, 0, 0.1);
        margin-right: 2rem;
        text-align: center;
        padding: 10px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
    }

    .proD {
        color: black;
        margin-top: 1rem;
        font-size: 12px;
        white-space: nowrap; /* Không cho phép xuống dòng */
        overflow: hidden; /* Ẩn phần chữ vượt quá giới hạn */
        text-overflow: ellipsis; /* Hiển thị dấu "..." */
        width: 150px;
    }

    .pagenation-container {
        display: flex;
        /*justify-content: center;*/ /* Căn giữa các mục phân trang */
        list-style: none; /* Loại bỏ các chấm trước các trang */
        padding: 0;
        /*margin-top: 20px;*/ /* Thêm khoảng cách phía trên */
    }

        .pagenation-container li {
            margin: 0 5px; /* Khoảng cách giữa các trang */
        }

        .pagenation-container a, .pagenation-container span {
            padding: 10px;
            border-radius: 5px;
            color: black;
            text-decoration: none;
            display: inline-block;
        }

            .pagenation-container a:hover {
                background-color: #ddd; /* Màu nền khi hover */
            }
</style>
@if (Model.RelatedProducts != null && Model.RelatedProducts.Any())
{
    <section class="container-fluid productList">
        <h4 style="font-weight:bold;">Sản phẩm tương tự</h4>
        <ul class="list-container">
            @foreach (var product in Model.RelatedProducts)
            {
                <li class="product-item">
                    <div>
                        <a href="@Url.Action("ProductDetails", "Home", new { id = product.ProductID })">
                            <img src="@product.ProductImage" />
                        </a>
                    </div>
                    <div>
                        <h5 class="proD">@product.ProductName</h5>
                        <p class="price">@product.ProductPrice</p>
                    </div>
                </li>
            }
        </ul>
    </section>
}