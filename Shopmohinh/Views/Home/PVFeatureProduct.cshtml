@model Shopmohinh.Models.ViewModel.HomeProductVM
<style type="text/css">
    .SanphamNB {
        text-align: center;
        margin-top: 2rem;
       
    }

    .feature-container {
        justify-content: space-between;
        display: flex;
        width: 1250px;
        margin: 0 auto;
        /*margin-bottom:100px;*/
        margin-top: 3rem;
        overflow-x: auto; /* Kích hoạt thanh cuộn ngang */
        padding-bottom: 10px; /* Tạo khoảng cách phía dưới cho thanh cuộn */
    }

    .product-NB {
        
        box-shadow: 0 5px 40px rgba(0, 0, 0, 0.1);
        margin-right: 2rem;
        text-align: center;
        padding: 10px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        width: 200px;
    }

        .product-NB img {
            width: 100%; /* Để ảnh vừa với chiều rộng của ô */
            height: auto; /* Tự động co dãn theo chiều rộng */
            max-height: 150px; /* Giới hạn chiều cao tối đa của ảnh */
            object-fit: cover; /* Ảnh sẽ cắt bớt nếu vượt quá giới hạn */
        }

        .product-NB a {
            text-decoration: none;
            color: black;
            font-size: 10px;
        }

    .price {
        margin-top: 1rem;
    }
    .prodName {
        white-space: nowrap; /* Không cho phép xuống dòng */
        overflow: hidden; /* Ẩn phần chữ vượt quá giới hạn */
        text-overflow: ellipsis; /* Hiển thị dấu "..." */
        width: 150px;
    }
</style>


@if (Model.FeaturedProducts != null && Model.FeaturedProducts.Any())
{
    <div class="container-fluid SanphamNB">
        <h2>Sản phẩm nổi bật</h2>
        <div class="feature-container">
            @foreach (var product in Model.FeaturedProducts)
            {
                <div class="product-NB">
                    <div>
                        <a href="@Url.Action("ProductDetails", "Home", new { id = product.ProductID })">
                            @*<img src="@Html.DisplayFor(modelItem => product.ProductImage)" />*@
                            <img src="@product.ProductImage" />
                        </a>
                    </div>
                    <div>
                        <p class="prodName">
                            @Html.DisplayFor(modelItem => product.ProductName)
                        </p>
                        <p class="price">
                            @*@Html.DisplayFor(modelItem => product.ProductPrice)*@
                            @product.ProductPrice
                        </p>
                        <p class="prodCate">
                            @Html.DisplayFor(modelItem => product.Category.CategoryName)
                        </p>
                        <p class="prodSale">
                            đã bán :&nbsp; @Html.DisplayFor(modelItem => product.OrderDetails.Count)
                        </p>
                    </div>

                </div>
            }
        </div>
    </div>
}


