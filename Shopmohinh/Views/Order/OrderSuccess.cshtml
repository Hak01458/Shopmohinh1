<style type="text/css">
    .chitiet img {
        width: 80px;
    }

    .xacnhan {
        margin-top: 2rem;
        font-size: 17px;
    }
    .hinhall img {
        width: 80px;
    }

    .form-group {
        margin-top: 1rem;
        font-size: 17px;
    }
</style>

@{
    ViewBag.Title = "OrderSucess";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Xác nhận đơn hàng</h2>

<table class="xacnhan">
    <tr>
        <th class="xacnhan1">Ngày đặt hàng</th>
        <td>@Model.OrderDate</td>
    </tr>
    <tr>
        <th class="xacnhan1">Tổng số tiền</th>
        <td>@Model.TotalAmount.ToString("C")</td>
    </tr>
    <tr>
        <th class="xacnhan1">Trạng thái thanh toán</th>
        <td>@Model.PaymentStatus</td>
    </tr>
    <tr>
        <th class="xacnhan1">Phương thức thanh toán</th>
        <td>@Model.PaymentMethod</td>
    </tr>
    <tr>
        <th class="xacnhan1">Phương thức giao hàng</th>
        <td>@Model.ShippingMethod</td>
    </tr>
    <tr>
        <th class="xacnhan1">
            Địa chỉ giao hàng
        </th>
        <td>@Model.ShippingAddress</td>
    </tr>

</table>
<hr />
<h3>Chi tiết đơn hàng</h3>
<div class="form-group">
    <table class="table">
        <thead>
            <tr>
                <th colspan="2">Sản phẩm </th>
                <th>Số lượng </th>
                <th>Đơn giá </th>
             
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model.OrderDetails)
            {
                <tr>
                    <td class="hinhall"><img src="@item.Product.ProductImage" /></td>
                    <td>@item.Product.ProductName </td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice.ToString("C")</td>

                </tr>
            }
        </tbody>
    </table>
</div>
<div class="col-md-12">@Html.ActionLink("Tiếp tục mua hàng", "Index", "Home", null, new { @class = "btn btn-primary" })</div>
