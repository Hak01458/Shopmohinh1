@model Shopmohinh.Models.ViewModel.LoginVM
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .accountbtn {
        width: 300px;
        margin-top: 1rem;
        background-color: cornflowerblue;
    }

    /*.form-group {
        display: flex;
        text-align: center;
        width: 400px;
        margin-block: 1rem;
        justify-content: space-between;
        margin-left: 2rem;
        font-size: 20px;
    }*/
</style>
<!DOCTYPE html>
<div>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken();
        @Html.ValidationSummary(true, "", new { @class = "text-danger" }) // Hiển thị thông báo lỗi

        <div class="form-group">
            <h2 class="col-md-6" style="text-align:left;">Đăng nhập</h2>
        </div>
        @* Tên đăng nhập *@
        <div class="form-group">
            @Html.LabelFor(m => m.Username, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Username)
            </div>
        </div>
        @* Mật khẩu *@
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-4">
                <input type="submit" value="Đăng nhập" class="btn btn-info accountbtn" /><br />
                <p>Bạn chưa có tài khoản? <a href="@Url.Action("Register", "Account", null)">Đăng ký ngay</a></p>
            </div>
        </div>
    }
</div>

