        <div class="span2">
            <a>Mô Hình ACE đứng nâng cầu có Led – Cao 39cm nặng 3kg1 – Box Carton</a>

        </div>
        <div class="All">
            <p>930.000<span> &#8363;</span></p>
            <div class="quantity-control">
                @*<p>930.000<span> &#8363;</span></p>*@
                <button id="decrement">-</button>
                <input type="number" id="quantity" value="1" min="1" readonly />
                <button id="increment">+</button>
                <p id="total-price">Thành tiền: <span id="price">930.000</span> &#8363;</p>
            </div>
        </div>
        <script>
            
            document.addEventListener("DOMContentLoaded", function () {
                const incrementButton = document.getElementById("increment");
                const decrementButton = document.getElementById("decrement");
                const quantityInput = document.getElementById("quantity");
                const totalPrice = document.getElementById("total-price");
                const totalMoneyDisplay = document.querySelector(".final-price p"); // Đối tượng hiển thị tổng tiền
                const itemPrice = 930000; // Giá sản phẩm

                function updateTotalPrice() {
                    const quantity = parseInt(quantityInput.value);
                    const total = quantity * itemPrice;
                    totalPrice.innerHTML = `Thành tiền: <span>${total.toLocaleString()}</span> &#8363;`;
                    totalMoneyDisplay.innerHTML = `${total.toLocaleString()}<span> &#8363;</span>`; // Cập nhật tổng tiền
                }

                incrementButton.addEventListener("click", function () {
                    quantityInput.value = parseInt(quantityInput.value) + 1;
                    updateTotalPrice();
                });

                decrementButton.addEventListener("click", function () {
                    if (parseInt(quantityInput.value) > 1) {
                        quantityInput.value = parseInt(quantityInput.value) - 1;
                        updateTotalPrice();
                    }
                });

                updateTotalPrice(); // Cập nhật ngay khi trang được tải
            });
        </script>
    </div>
