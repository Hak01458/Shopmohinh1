<style type="text/css">
    h1 {
        text-align: center;
        background-color: lightgrey;
        border-radius: 12px 12px 0 0;
        padding: 14px 0;
        color: #00a651;
        font-size: 30px;
        font-weight: 700;
        text-transform: none;
        line-height: 20px;
        border-radius: 0;
        padding: 10px 0;
    }

    h2 {
        line-height: 21px;
        color: rebeccapurple;
        padding: 15px 8px 15px 0;
        text-align: left;
        font-size: 20px;
        margin: 0;
    }

    h4 {
        color: #fb6e2e;
        background: rgba(251, 110, 46, .05);
        border: 1px dashed #fb6e2e;
        box-sizing: border-box;
        border-radius: 4px;
        text-align: center;
        padding: 10px 0;
        font-size: 18px;
    }

    .order-overview-content{
        font-size: 20px;
        background-color: #f5f5f7;
        border-radius: 12px;
        width: auto;
        margin-bottom: 0;
        /*margin: 0;*/
    }

    .left img {
        height: 75px;
        width: 75px;
    }

    .hinh img {
        height: 50px;
    }

    .mid {
        margin-left: 100px;
        font-size: 30px;
    }

    .ProD {
        font-size: 20px;
    }

    .buy-method {
        display: flex;
        align-items: center;
        font-size: 20px;
        margin-block: 1rem;
    }

    .xacnhan {
        background-color: deepskyblue;
        text-decoration: none;
        border-radius: 20px;
        padding: 10px 20px; /* Thêm padding để tạo khoảng cách bên trong */
        width: 650px; /* Đặt chiều rộng cụ thể */
        text-align: center; /* Căn giữa nội dung */
        display: inline-block; /* Cần thiết để chiều rộng hoạt động */
        color: white;
        margin-top:1rem;
    }
    .checkout-payment_options{
        /*display:flex;
        justify-content:center;*/
        font-size:20px;
    }
    .section-order-summary {
        text-align: left;
        width: 700px;
        justify-content: center;
        /*display:flex;*/
        margin: 0 auto;
    }
    .checkout-data{
        text-align:center;
    }
    .sectionorder-completed a{
        text-decoration:none;
    }
    .thanhtoan a {
        color: cornflowerblue;
        /*margin-bottom:6rem;*/ text-decoration: none;
        font-size:15px;
    }
    .thanhtoan {
        text-align: center;
        margin-top: 1rem;
        
    }
    .gohome {
       
        background-color: white;
        color: dodgerblue;
        padding: 10px 135px;
        border-radius: 20px;
        text-align: center;
        margin:0 auto;
        text-decoration: none;
        border: 2px solid deepskyblue;
        width:400px;
    }
    .ds_item_label img{
        height:30px;
        width:30px;
    }
</style>

@{
    Layout = "~/Views/Shared/_MasterLayout1.cshtml";
}





<div  class="section-order-summary">
    <div class="page-title">
        <h1> Đặt hàng thành công </h1>
    </div>
    <h2 class="title">
        Cảm ơn
        <strong> bạn </strong>
        đã cho Tedi Shop cơ hội được phục vụ thượng đế
    </h2>

    <ul class="order-overview-content">
        <li class="order-number">
            <label>
                Đơn hàng:
                <span>#999999</span>
            </label>
        </li>
        <li class="name">
            <strong>Người nhận:</strong>
            Nguyen Van a,SĐT:0987654321
        </li>
        <li class="cart-total">
            <strong>Nhận tại:</strong>
            trái đất năm 2100
        </li>
        <li class="cart-total">
            <strong>Tổng tiền:</strong>
            <strong>999.999$</strong>
        </li>

    </ul>

    <h4 class="order-infor-alert">Đơn hàng chưa được thanh toán</h4>

    <div class="left">
        <div class="checkout-payment">
            <h3 class="checkout-title">Phương thức thanh toán</h3>
            <div class="block-border">
                <p>Quý khách vui lòng lựa chọn các hình thức thanh toán dưới đây:</p>
                <div class="checkout-payment_options">
                    <label class="ds_item">
                        <input class="ds_item_input" type="radio" name="payment_method" id="payment_method_1" value="1" />
                        <a class="ds_item_label">
                            <img src="~/Content/img/thetd.jpg" />
                            Thanh toán bằng thẻ tín dụng
                        </a><br />

                    </label>
                    <label class="ds_item">
                        <input class="ds_item_input" type="radio" name="payment_method" id="payment_method_2" value="2" checked />
                        <a class="ds_item_label">
                            <img src="~/Content/img/vnpay.jpg" />
                            Thanh toán bằng VNPay
                        </a><br />
                    </label>
                    <label class="ds_item">
                        <input class="ds_item_input" type="radio" name="payment_method" id="payment_method_5" value="5" />
                        <a class="ds_item_label">
                            <img src="~/Content/img/momo.jpg" />
                            Thanh toán bằng Momo
                        </a><br />
                    </label>
                    <label class="ds_item">
                        <input class="ds_item_input" type="radio" name="payment_method" id="payment_method_3" value="3" />
                        <a class="ds_item_label">
                            <img src="~/Content/img/zalopay.jpg" />
                            Thanh toán bằng ZaloPay
                        </a><br />
                    </label>
                    <label class="ds_item">
                        <input class="ds_item_input" type="radio" name="payment_method" id="payment_method_3" value="3" />
                        <a class="ds_item_label">
                            Thanh toán khi giao hàng
                        </a><br />
                    </label>
                </div>
                <a href="#" class="xacnhan">xác nhận</a>
            </div>
        </div>
    </div>
</div>
<div class="checkout-data">
    <div class="sectionorder-completed">
        <div class="note">
            Khi cần hỗ trợ vui lòng gọi
            <a style="color:#288ad6" href="tel:19006626" class="policy-phone-number">1900.6626</a>
            " (08:00 - 22:00)"
        </div>
        @*<div class="thanhtoan">
            <a href="#">Xem chính sách mua hàng</a>
            <p><a href="#">Quay về trang chủ</a></p>
        </div>*@
    </div>
</div>
<div class="thanhtoan">
    <a href="#">Xem chính sách mua hàng</a>
